<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/2002/xmlspec/dtd/2.10/xmlspec.dtd">
<configuration debug="false" scan="true" scanPeriod="30 seconds">

	<appender name="M2MNAP_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy.MM.dd HH:mm:ss.SSS}, %p, %c, %t, %L, %M,
				%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.apache.lucene.demo">
		<level value="DEBUG" />
	</logger>

	<root>
		<level value="ERROR" />
		<appender-ref ref="M2MNAP_CONSOLE" />
	</root>

</configuration>